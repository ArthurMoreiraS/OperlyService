# ===========================================
# OPERLY SERVICE - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# SERVER
# ===========================================
NODE_ENV=production
PORT=3333

# ===========================================
# DATABASE (Supabase PostgreSQL / Neon / etc)
# ===========================================
# Connection pooling URL (for serverless - uses pgBouncer)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?pgbouncer=true&connection_limit=1"

# Direct connection URL (for migrations)
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"
JWT_EXPIRES_IN="7d"

# ===========================================
# CORS
# ===========================================
# Multiple origins separated by comma
CORS_ORIGINS="https://operlyapp.com,https://operly-client.vercel.app"

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# SECURITY
# ===========================================
BCRYPT_SALT_ROUNDS=12

# ===========================================
# FRONTEND URL
# ===========================================
FRONTEND_URL="https://operlyapp.com"
